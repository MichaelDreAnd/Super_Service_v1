@{
    ViewData["Title"] = "Search";
}

    <section id="home" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">

                <div class="col-md-offset-3 col-md-6 col-sm-12">
                    <div class="home-info">
                        <h3>SUPER SERVICE</h3>
                        <h1>Frisør i nærheden af dig!</h1>
                        <form asp-controller="Home" asp-action="Search" method="post" class="online-form">
                            <table>
                                @if (ViewBag.lstCompanies != null)
                                {
                                    @foreach (var company in ViewBag.lstCompanies)
                                    {
                                        {
                                            <tr>
                                                <th>Firma</th>
                                                <th>Adresse</th>
                                                <th>PostNr</th>
                                            </tr>
                                            <tr>
                                                <td>@company.CompanyName</td>
                                                <td>@company.Address</td>
                                                <td>@company.ZipCode</td>
                                            </tr>
                                        }
                                    }
                                }
                            </table>
                        </form>
                        
                    </div>
                </div>

            </div>
        </div>
    </section> 